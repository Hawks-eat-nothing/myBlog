    <!--新增评论-->
    <insert id="saveComment" parameterType="com.yxg.blog.pojo.Comment">
        insert into blog.t_comment (nickname,email,content,avatar,
                                    create_time,blog_id,parent_comment_id, admin_comment)
        values (#{nickname},#{email},#{content},#{avatar},
                #{createTime},#{blogId},#{parentCommentId}, #{adminComment});
    </insert>

    <!--查询父级评论-->
    <select id="findByBlogIdParentIdNull" resultType="com.yxg.blog.pojo.Comment">
        select *
        from blog.t_comment c
        where c.blog_id = #{blogId} and c_parent_comment_id = #{blogParentId}
        order by c.create_time desc
    </select>

    <!--查询1级评论-->
    <select id="findByBlogIdParentIdNotNull" resultType="com.yxg.blog.pojo.Comment">
        select *
        from blog.t_comment c
        where c.blog_id = #{blogId} and c_parent_comment_id = #{id}
        order by c.create_time desc
    </select>

    <!--查询2级子评论-->
    <select id="findByBlogIdAndReplyId" resultType="com.yxg.blog.pojo.Comment">
        select *
        from blog.t_comment c
        where c.blog_id = #{blogId} and c.parent_comment_id = #{childId}
        order by c.create_time desc
    </select>

    <!--删除评论-->
    <delete id="deleteComment">
        delete from blog.t_comment where id = #{id}
    </delete>

    <!--    根据父评论id查询留言信息-->
    <select id="getEmailByParentId" resultType="com.yxg.blog.pojo.Comment">
        select *
        from blog.t_comment c
        where c.id = #{parentId}
        order by c.create_time desc
    </select>

</mapper>